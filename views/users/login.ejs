<% layout("/layouts/boilerplate.ejs") -%>
    <div class="row">
        <div class="col-6 offset-3">
        <h1>Login </h1>
        </div>
        <div class="col-6 offset-3 mt=3">


            <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
            <input name="username" placeholder="add A username" type="text" class="form-control" id="username" required>
            </div>

            
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
            <input name="password" placeholder="add password" type="password" class="form-control" id="password" required>
            </div>
             
            <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>